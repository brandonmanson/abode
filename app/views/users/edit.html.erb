<%= flash[:error] %>
<%= form_for @user, url: user_update_path(@user.id), method: :put do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.email_field :email, placeholder: "Email" %>
  <%= f.number_field :phone, placeholder: "Phone" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.submit "Update" %>
<% end %>
