<h1>Welcome, <%= @user.name %></h1>
  <%= link_to "Edit Profile", user_edit_path(current_user), class: "profile_links" %><br>

  <% if @user.dwelling != nil %>
    <h2>Your profile</h2>
    <p><%= @user.name %></p>
    <p><%= @user.email %></p>
    <p><%= @user.phone %></p>
    <p><%= @user.name %></p>
    <p><%= @user.dwelling_id %></p>

    <h2>Your abode</h2>
    <p><%= link_to "#{@user.dwelling.name}", dwelling_show_path(@user.dwelling.id), class: "profile_links" %></p><br>
    <p> Use the following code to join new users to this abode: "<%= @user.dwelling.secret_key %>"</p>
    <%= link_to "Invite Roommates", new_abode_invitation_path(@user.dwelling.id), class: "profile_links" %>
  <% else %>
    <%= link_to "Create abode", dwellings_new_path, class: "profile_links" %><br>
    <%= link_to "Join abode", user_join_path, class: "profile_links" %><br>
  <% end %>
  <%= flash[:message] %>
<h2>Emergency Contacts</h2>
<ul>
  <%= render @user.emergency_contacts %>
  <li>
    <%= link_to "Add Contact", controller: 'emergency_contacts', action: 'new', user_id: @user.id %>
  </li>
</ul>
